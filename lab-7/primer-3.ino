#define _LCD_TYPE 1  // определяем тип LCD = 1 (для работы с I2C дисплеями)

#include <LCD_1602_RUS_ALL.h> // подключаем библиотеку LCD 16x2 с поддержкой русского языка (кириллица)

LCD_1602_RUS lcd(0x27, 16, 2); // создаём объект lcd: I2C адрес 0x27, 16 символов × 2 строки, русская локализация

void setup() {
  lcd.init();        // инициализация LCD дисплея
  lcd.backlight();   // включить подсветку
  
  // устанавливаем курсор в начало первой строки (позиция X=0, строка Y=0)
  lcd.setCursor(0, 0);
  
  // выводим русскую строку "Привет!" (библиотека автоматически конвертирует кириллицу)
  lcd.print("Привет!");
}

void loop() {
}
