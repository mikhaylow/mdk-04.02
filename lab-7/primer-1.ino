#include <LiquidCrystal_I2C.h> // подключаем библиотеку для LCD с I2C интерфейсом

LiquidCrystal_I2C lcd(0x27, 16, 2); // создаём объект lcd: адрес I2C=0x27, ширина=16 символов, высота=2 строки

void setup() {
  lcd.init();            // инициализация LCD дисплея
  lcd.backlight();       // включить подсветку (подсветка всегда ВКЛ)
  // выводим стрелочку (код символа 126 = →), надпись "Temp: ", число 25.6 и символ градуса (код 223 = °)
  lcd.write(126);        // выводим символ со значением 126 (стрелочка →)
  lcd.print("Temp: ");   // выводим текст "Temp: "
  lcd.print(25.6);       // выводим число с плавающей точкой 25.6
  lcd.write(223);        // выводим символ со значением 223 (градус °)
}

void loop() {
}
