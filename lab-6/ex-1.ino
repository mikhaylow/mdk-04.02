// Подключаем библиотеку GyverMAX7219 для работы с матрицами 8x8 на чипах MAX7219
#include <GyverMAX7219.h>

// Создаём объект mtrx для управления одной матрицей 8x8
// Параметры: <ширина_в_матрицах, высота_в_матрицах, пин_CS>
// Здесь: 1x1 матрица, пин CS подключён к цифровому пину D5 Arduino
MAX7219<1, 1, 5> mtrx;

void setup() {
  // Инициализируем матрицу и настраиваем связь с MAX7219
  mtrx.begin(); 
  
  // Устанавливаем яркость дисплея (диапазон 0..15, где 0-выкл, 15-максимум)
  mtrx.setBright(5); 
  
  // Раскомментировать для поворота изображения (0..3 = 0°, 90°, 180°, 270° по часовой)
  //mtrx.setRotation(1); 
  
  // Включаем один пиксель в левом верхнем углу матрицы (координаты 0,0)
  mtrx.dot(0, 0); 
  
  // Обновляем дисплей - отправляем все изменения на матрицу
  mtrx.update(); 
  
  // Пауза 1 секунда для просмотра точки
  delay(1000);
  
  // Очищаем всю матрицу (все пиксели выключаем)
  mtrx.clear();
  
  // Рисуем диагональную линию от (0,0) до (7,7) - от левого верхнего до правого нижнего угла
  mtrx.line(0, 0, 7, 7); // (x0, y0, x1, y1)
  
  // Рисуем вторую диагональную линию от (7,0) до (0,7) - крест-накрест
  mtrx.line(7, 0, 0, 7);
  
  // Обновляем дисплей, показываем крест
  mtrx.update();
  
  // Пауза 1 секунда для просмотра креста
  delay(1000);
  
  // Очищаем матрицу перед рисованием круга
  mtrx.clear();
  
  // Рисуем заполненный круг: центр (3,3), радиус 3 пикселя, GFX_FILL = заливка
  mtrx.circle(3, 3, 3, GFX_FILL); 
  
  // Обновляем дисплей, показываем круг
  mtrx.update();
  
  // Пауза 1 секунда для просмотра круга
  delay(1000);
  
  // Очищаем матрицу перед рисованием окружности
  mtrx.clear();
  
  // Рисуем окружность (только контур): центр (3,3), радиус 3, GFX_STROKE = только обводка
  mtrx.circle(3, 3, 3, GFX_STROKE);
  
  // Обновляем дисплей, показываем окружность
  mtrx.update();
  
  // Пауза 1 секунда для просмотра окружности
  delay(1000);
  
  // Комментарий: остальные функции геометрии (прямоугольники, тексты и т.д.) смотри в документации библиотеки
  //mtrx.clear();
}

void loop() {
}
